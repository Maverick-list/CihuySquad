# EduCerdas AI - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# OpenAI API Configuration
# ============================================
OPENAI_API_KEY=sk-YOUR_ACTUAL_KEY_HERE
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=600
OPENAI_TEMPERATURE=0.7

# ============================================
# Server Configuration
# ============================================
PORT=3001
NODE_ENV=development
# production | development | testing

# ============================================
# Rate Limiting (requests per time window)
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
# Time window in milliseconds (default: 15 minutes = 900000ms)
RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per IP address per window

RATE_LIMIT_AI_WINDOW_MS=60000
# Stricter limit for AI endpoint (1 minute window)
RATE_LIMIT_AI_MAX_REQUESTS=20
# Max 20 AI requests per minute per IP

# ============================================
# Request Logging
# ============================================
REQUEST_LOGGING_ENABLED=true
LOG_LEVEL=info
# debug | info | warn | error
LOG_DIR=./logs
# Directory to store log files

# ============================================
# Token Rotation & Security
# ============================================
TOKEN_ROTATION_ENABLED=false
TOKEN_ROTATION_INTERVAL_HOURS=24
# Rotate API key every N hours (requires manual setup)

API_KEY_VAULT_ENABLED=false
# When enabled, load keys from external vault (future enhancement)

ALLOWED_ORIGINS=http://localhost:8002,http://localhost:3001
# CORS allowed origins (comma-separated)

# ============================================
# Monitoring & Analytics
# ============================================
TRACK_AI_USAGE=true
# Log all AI API calls for monitoring

ALERT_THRESHOLD_COST_PER_HOUR=10
# Alert if hourly cost exceeds this USD amount

# ============================================
# Development & Testing
# ============================================
MOCK_AI_RESPONSES=false
# When true, use local rule-based responses (for testing without API key)

DEBUG_MODE=false
# Enable verbose logging and error details
